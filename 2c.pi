import numpy as np
import numpy.random as random
import matplotlib.pyplot as plt

a = 2
b = 1
x = np.linspace( 0, 1, 20 )
noise = ( random.rand(20) - 0.5 )
y1 = a*x + b + noise
y2 = a*x + b

plt.scatter( x, y1 )
plt.plot( x, y2, '-' )
plt.xlabel( 'x' )
plt.ylabel( 'y' )
plt.text( 0.8, 0.8, 'Copyright@ytl' )

plt.show()